{
    "manifest_version": 2,
    "name": "Summ",
    "description": "Research Assistant",
    "version": "1.0",
    "permissions": [
        "http://localhost/*",
        "webNavigation", "tabs", "http://*/*", "https://*/*",
        "cookies"
           ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js", "./js/jquery/jquery.min.js"]
        }
    ],

    "web_accessible_resources": [
        "overlay.html"
    ]

    
}